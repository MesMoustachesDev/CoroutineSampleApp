<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
            motion:constraintSetEnd="@+id/end"
            motion:constraintSetStart="@+id/start"
            motion:duration="1000"
            motion:motionInterpolator="easeOut">
        <OnSwipe
                motion:dragDirection="dragUp"
                motion:touchAnchorId="@+id/motionLayout"
                motion:touchAnchorSide="bottom" />

        <ConstraintSet android:id="@+id/start">
            <Constraint
                    android:id="@+id/motionLayout"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleX="1.1"
                    android:scaleY="1.1"
                    android:visibility="visible"
                    motion:layout_constraintTop_toTopOf="parent" />

            <Constraint
                    android:id="@+id/root"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    motion:layout_constraintBottom_toBottomOf="parent"
                    motion:layout_constraintTop_toBottomOf="@id/address" />

            <Constaint
                    android:id="@+id/eventDetailsDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp" />

            <Constraint
                    android:id="@+id/fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:translationY="0dp"
                    motion:layout_constraintBottom_toBottomOf="parent"
                    motion:layout_constraintEnd_toEndOf="parent" />

            <Constraint
                    android:id="@+id/contactsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:translationY="0dp"
                    motion:layout_constraintBottom_toBottomOf="parent" />

            <Constraint
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    android:gravity="center"
                    android:paddingStart="24dp"
                    android:paddingTop="24dp"
                    android:paddingBottom="24dp"
                    android:paddingEnd="24dp"
                    motion:layout_constraintTop_toBottomOf="@+id/motionLayout">
                <CustomAttribute
                        motion:attributeName="backgroundColor"
                        motion:customColorValue="@color/white" />

                <CustomAttribute
                        motion:attributeName="textColor"
                        motion:customColorValue="@color/black" />
            </Constraint>

            <Constraint
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    android:gravity="center"
                    android:padding="8dp"
                    motion:layout_constraintTop_toBottomOf="@+id/title">
                <CustomAttribute
                        motion:attributeName="backgroundColor"
                        motion:customColorValue="@color/white" />

                <CustomAttribute
                        motion:attributeName="textColor"
                        motion:customColorValue="@color/black" />
            </Constraint>
        </ConstraintSet>

        <ConstraintSet android:id="@+id/end">
            <Constraint
                    android:id="@+id/motionLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0.01dp"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:visibility="invisible"
                    motion:layout_constraintTop_toTopOf="parent" />

            <Constraint
                    android:id="@id/root"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    motion:layout_constraintBottom_toBottomOf="parent"
                    motion:layout_constraintTop_toBottomOf="@id/address" />

            <Constaint
                    android:id="@id/eventDetailsDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingTop="72dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp" />

            <Constraint
                    android:id="@+id/fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:translationY="100dp"
                    motion:layout_constraintBottom_toBottomOf="parent"
                    motion:layout_constraintEnd_toEndOf="parent" />

            <Constraint
                    android:id="@+id/contactsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:translationY="100dp"
                    motion:layout_constraintBottom_toBottomOf="parent" />

            <Constraint
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:paddingStart="24dp"
                    android:paddingTop="40dp"
                    android:paddingBottom="24dp"
                    android:paddingEnd="24dp"
                    motion:layout_constraintTop_toBottomOf="@+id/motionLayout">
                <CustomAttribute
                        motion:attributeName="backgroundColor"
                        motion:customColorValue="@color/colorPrimary" />
                <CustomAttribute
                        motion:attributeName="textColor"
                        motion:customColorValue="@color/white" />

            </Constraint>

            <Constraint
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:padding="8dp"
                    motion:layout_constraintTop_toBottomOf="@+id/title">
                <CustomAttribute
                        motion:attributeName="backgroundColor"
                        motion:customColorValue="@color/colorPrimary" />
                <CustomAttribute
                        motion:attributeName="textColor"
                        motion:customColorValue="@color/white" />
            </Constraint>

        </ConstraintSet>
    </Transition>

</MotionScene>